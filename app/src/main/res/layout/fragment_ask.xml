<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginLeft="10sp"
        android:text="@string/ask_explanation"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/explanation" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:id="@+id/imageViewThumbnail"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ask_icon"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="10dp"
        android:id="@+id/uva_id"
        android:fontFamily="sans-serif-light"
        android:gravity="top"
        android:textColorHint="#55000000"
        android:textStyle="italic"
        android:inputType="text"
        android:background="#11FFFFFF"
        android:hint="UVa ID"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/inputs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Spinner
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/courses"
                android:spinnerMode="dropdown"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="30dp"
                android:background="#00000000"
                android:popupBackground="#00000000"
                android:prompt="@string/course"
                android:visibility="visible"
                />

            </LinearLayout>



        <Button
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_gravity="center"
            android:id="@+id/takePhotoButton"
            android:gravity="top"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="Take Photo"
            android:textColor="#88FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textStyle="italic"
            android:background="@xml/light_black_background_no_padding"
            android:visibility="visible"/>

        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginLeft="10sp"
        android:text="No Course Selected"
        android:fontFamily="sans-serif"
        android:textColor="#66333333"
        android:id="@+id/course_selected"
        android:visibility="gone"/>

    <Button
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center"
        android:id="@+id/sendButton"
        android:gravity="top"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="Submit"
        android:textColor="#88FFFFFF"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"
        android:background="@xml/light_black_background_no_padding"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginLeft="10sp"
        android:text="Now, submit your problem!"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/forward"
        android:visibility="gone"/>




</LinearLayout>