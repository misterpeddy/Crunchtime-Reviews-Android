<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="@drawable/background"
    tools:context="com.pedApps.crunchtimereviews.RequestFragment">




    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <Spinner
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/courses"
            android:spinnerMode="dropdown"
            android:layout_margin="10dp"
            android:background="#00000000"
            android:popupBackground="#00000000"
            android:prompt="@string/course"/>

        <Spinner
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/teachers"
            android:spinnerMode="dropdown"
            android:layout_margin="10dp"
            android:background="#00000000"
            android:popupBackground="#00000000"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:prompt="@string/course"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:id="@+id/session_purpose"
            android:fontFamily="sans-serif-light"
            android:gravity="top"
            android:textColorHint="#55000000"
            android:textStyle="italic"
            android:inputType="text"
            android:background="#11FFFFFF"
            android:hint="@string/purpose_of_session"/>

   </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <Button
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_gravity="center"
            android:gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:padding="10dp"
            android:text="@string/request_session"
            android:textColor="#88FFFFFF"
            android:fontFamily="sans-serif-light"
            android:textStyle="italic"
            android:background="@xml/light_black_background_no_padding"/>

    </LinearLayout>


</LinearLayout>
